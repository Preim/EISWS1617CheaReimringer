<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eis.bikefriends.EventDetailsActivity">

    <TextView
        android:text="Event ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/eventIDTv" />

    <TextView
        android:text="EventTitel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventIDTv"
        android:layout_alignParentStart="true"
        android:id="@+id/event_titleTv"
        android:textSize="24sp" />

    <TextView
        android:text="Eventstart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_titleTv"
        android:layout_alignParentStart="true"
        android:id="@+id/event_startTv"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_startTv"
        android:layout_alignEnd="@+id/event_startTv"
        android:id="@+id/event_destTv"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_dateTv"
        android:layout_below="@+id/event_timeTv"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_timeTv"
        android:layout_below="@+id/event_destTv"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_descriptTv"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
